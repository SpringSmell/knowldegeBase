<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yidingliu.dev.knowledgebase">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".frame.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoTitleBar">
        <activity android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".activities.SelectorActivity" />
        <activity android:name=".activities.TabHostDomeFragment" />
        <activity android:name="com.yidingliu.dev.knowldegelibrary.function.SelectorImgActivity"/>
        <activity android:name="com.yidingliu.dev.knowldegelibrary.function.selectorimg.PhotoAlbumActivity"/>
        <activity android:name="com.yidingliu.dev.knowledgebase.activities.PermissionActivity"/>
        <activity android:name=".activities.TestNIOActivity"/>
        <activity android:name=".activities.XRecyclerViewActivity"/>
        <activity android:name=".activities.SortListViewActivity"/>
        <activity android:name=".activities.AnalyzeActivity"/>
        <activity android:name=".activities.VoiceActivity"/>

        <!-- autoLayout配置 -->
        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />
    </application>

</manifest>